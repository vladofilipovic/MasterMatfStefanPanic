<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">
            <info.hoang8f.widget.FButton
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/latinica"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/izbor_jezika_latinica" />
            <info.hoang8f.widget.FButton
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/cirilica"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/izbor_jezika_cirilica" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aabbbbbb" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">
          <info.hoang8f.widget.FButton
            android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_orange"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/play"
                android:drawableLeft="@drawable/ic_play_w"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/igraj" />
            <info.hoang8f.widget.FButton
              android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/settings"
                android:drawableLeft="@drawable/ic_settings_w"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/podesavanja" />
          <info.hoang8f.widget.FButton
            android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/records"
                android:drawableLeft="@drawable/ic_star_w"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rekordi" />
          <info.hoang8f.widget.FButton
            android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                fbutton:shadowEnabled="true"
                fbutton:cornerRadius="10dp"
                android:id="@+id/quit"
                android:drawableLeft="@drawable/ic_power_w"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quit" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>